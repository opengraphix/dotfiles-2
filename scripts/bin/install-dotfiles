#!/bin/sh

set -e

if test ! $(which brew)
then
    ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go)"
fi

brew install stow

DOTFILES_DIR=`dirname "${BASH_SOURCE[0]}"`/../../

cd $DOTFILES_DIR

git submodule update --init --recursive

stow --ignore="\.DS_Store" -d $DOTFILES_DIR -t $HOME -v 2 -S zsh -S vim -S git -S ctags -S scripts
